fun main() {
    val g = 9.8 //the value of gravity is 9.8 therefore it will stay the same throughout the entire program.
    var t= 1  //the value of time is increasing by 1 in the entire program.

    var counter = 1
    while (counter<=10)  {
        var d = 0.5 * (g * (t * t))
        println("At $t seconds the distance is $d.")
        t++
        counter++
    }
}
//the counter is increasing in gravity from time to time by increasing the time in seconds while the counter is less than or equal to 10.//
